<h1 class="page-title">{{ product_category.name }}</h1>

{% for product in product_category.products %}
  <div class="catalog">
    <a href="/products/kh12806-office-rental-products/59-ground-floor">
      <h2 class="catalog-title">{{ product.name }}</h2>
    </a>
    <div class="catalog-body">
      <div class="catalog-image">
        {% if product.photos.first != blank %}
          <a href="#" class="cboxElement">
            {{ product.photos.first.attachment_meta.large.url | image_tag }}
          </a>
        {% endif %}
      </div>
      <ol class="catalog-thumbnails">
        {% for photo in product.photos %}
          {% if photo != blank %}
            <li class="catalog-thumbnails-image" data-photo-url="#">
              <a class="active" href="" rel="" title="" >
                {{ photo.attachment_meta.thumbnail.url | image_tag }}
              </a>
            </li>
          {% endif %}
        {% endfor %}
      </ol>
      <div class="catalog-info">
        <ul class="catalog-info-specifications list-dotted">

          {% for f in product.features %}
            <li>
              <span>{{f.name}}</span>
              <span>{{f.value}}</span>
            </li>
          {% endfor %}

        </ul>
      </div>
      <div class="clear"></div>
    </div>
  </div>
{% endfor %}
