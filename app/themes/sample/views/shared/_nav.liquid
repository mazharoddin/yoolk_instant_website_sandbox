<div class="nav">
  <div class="side-nav">
    {% if listing.logo != blank %}
      {{ listing.logo | attachment_url: 'medium' | image_tag | link_to_home }}
    {% endif %}

    <ul>
      <li>{{ 'sample.links.home'      | translate | link_to_home }}</li>
      <li>{{ 'sample.links.map'       | translate | link_to_map }}</li>
      <li>{{ 'sample.links.about_us'  | translate | link_to_about_us }}</li>
      <li>{{ 'sample.links.brochures' | translate | link_to_brochures }}</li>
      <li>
        {{ 'sample.links.photos'      | translate | link_to_galleries }}
        <ul class="sub-nav">
          {% for gallery in listing.galleries %}
            <li>
              <a href="{{ gallery.url }}" {% if gallery.current? %}class="active"{% endif %}>{{ gallery.name }} ({{ gallery.images.count }})</a>
            </li>
          {% endfor %}
        </ul>
      </li>
      <li>
        {{ 'sample.links.products' | translate | link_to_products }}
        <ul class="sub-nav">
          {% for product_category in listing.product_categories %}
            <li>
              <a href="{{ product_category.url }}" {% if product_category.current? %}class="active"{% endif %}>{{ product_category.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </li>
      <li>
        {{ 'sample.links.services' | translate | link_to_services }}
        <ul class="sub-nav">
          {% for service_category in listing.service_categories %}
            <li>
              <a href="{{ service_category.url }}" {% if service_category.current? %}class="active"{% endif %}>{{ service_category.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </li>
      <li>
        {{ 'sample.links.menu'    | translate | link_to_menu }}
        <ul class="sub-nav">
          {% for food_category in listing.food_categories %}
            <li>
              <a href="{{ food_category.url }}" {% if food_category.current? %}class="active"{% endif %}>{{ food_category.name }}</a>
            </li>
          {% endfor %}
        </ul>
      </li>
      <li>
        {{ 'sample.links.people'        | translate | link_to_people }}
      </li>
      <li>
        {{ 'sample.links.reservation'   | translate | link_to_reservation }}
      </li>
      <li>
        {{ 'sample.links.feedback'      | translate | link_to_feedback }}
      </li>
      <li>
        {{ 'sample.links.contact_us'    | translate  | link_to_contact_us }}
      </li>
      <li>
        {{ 'sample.links.announcements' | translate  | link_to_announcements }}
      </li>
    </ul>

    <div class="multilingual">
      <a href="#" id="dLabel" class="dropdown-toggle" data-toggle="dropdown" data-target="#" role="button">
        <span>Khmer</span>
        <span class="caret"></span>
      </a>
      <ul id="lang-ul" aria-labelledby="dLabel" class="dropdown-menu" role="menu">
        <li>
          <a href="http://jasmine.iwstaging.yoolk.com/">English</a>
        </li>
        <li>
          <a href="http://nokokiri.iwstaging.yoolk.com/">Japanese</a>
        </li>
      </ul>
    </div>

    {% comment %}.multilingual
    %span.lang-wrapper
      = link_to "#", id: "dLabel", class: "dropdown-toggle", data:{toggle: "dropdown", target: "#"}, role: "button" do
        %span= listing_decorator.language.name
        %span.caret
      %ul.dropdown-menu.lang-ul{role: "menu", aria:{labelledby: "dLabel"}}
        - listing_decorator.multilinguals.each do |listing|
          %li
            = link_to listing.language.name, "http://#{listing.instant_website.domain_name}"{% endcomment %}

    <div class="office">
      {% if current_account %}
        <a href="{{ listing.instant_website.office_url }}">{{ 'sample.my_office' | translate }}</a>
      {% else %}
        {{ 'sample.links.sign_in' | translate | link_to_sign_in }}
      {% endif %}
    </div>
  </div>
</div>