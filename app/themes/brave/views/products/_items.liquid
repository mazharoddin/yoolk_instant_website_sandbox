<div class="container">
  <div class="ecommerce">
    <div class="row">
      <div class="col-md-9 col-sm-8 col-md-push-3 col-sm-push-4">
        <div class="shopping-content">
          {% paginate listing.products by 3 %}
          <div class="row">
            {% for product in paginate.collection %}
              <div class="col-md-4 col-sm-6">
                <div class="shopping-item">
                  <a href = "{{ product.url }}">
                    {{ product.cover_photo | attachment_url: "medium" | image_tag: class: "img-responsive" }}
                  </a>
                  <h4>
                    <a href = "{{ product.url }}">
                      {{ product.name | link_to_products }}<span class=" pull-right">$49</span>
                    </a>
                  </h4>
                  <div class="clearfix"></div>
                  <div class="visible-xs">
                    <a class="btn btn-color btn-sm" href="#">{{ 'brave.home.readmore' | translate }}</a>
                  </div>
                  <div class="item-hover bg-color hidden-xs">
                    <a href="#">{{ 'brave.home.readmore' | translate }}</a>
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
          <div class="paginate">
            {{ paginate | bootstrap_pagination }}
          </div>
          {% endpaginate %}
        </div>
      </div>
      <div class="col-md-3 col-sm-4 col-md-pull-9 col-sm-pull-8">
        <div class="sidebar">
          <h2>{{ 'brave.products.category' | translate }}</h2>
          <ul class="list-unstyled my-list">
            {% for category in listing.product_categories %}
              <a href="{{ category.url }}">
                <li>{{ category.name }}</li>
              </a>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>